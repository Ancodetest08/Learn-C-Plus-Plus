#include <iostream>

int main() {
    
	if (true) {
		std::cout << "Điều kiện đúng";
	} else {
		std::cout << "Điều kiện sai";
	}

	int month;

	try_again:
	std::cout << "Nhập tháng: "; std::cin >> month;
	
	switch (month) {
		case 1:
		case 3:
		case 5:
		case 7:
		case 8:
		case 10:
		case 12:
			std::cout << "31 ngày";
			break;
		case 4:
		case 6:
		case 9:
		case 11:
			std::cout << "30 ngày";
			break;
		case 2:
			std::cout << "28 ngày";
			break;
		default:
			goto try_again;
	}

	int x = 2;
	int y = (x % 2 == 0 ? 0 : 1);
	int s = 0;

	for (x = 1; x <= 10; x++) {
		std::cout << x;
	}

	while (y <= 10) {
		std::cout << y;
		if (y == 8) {
			break;
		}
		y++;
	}

	do {
		if (x == 5) {
			x--;
			continue;
		}
		std::cout << x;
		x--;
	} while (x >= 0);

	return 0;

}
