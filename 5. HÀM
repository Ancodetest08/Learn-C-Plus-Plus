#include <iostream>
#include <string>

// Tham Trị
void print_message(string message) {
	std::cout << "Message: " << message << std::endl;
}

// Tham Chiếu
void increment(int &x) {
	x++;
}

void input_integer(string label, const int &x) {
	// Read Only
	std::cout << x << std::endl;
}

float avg(int, int);

void function_a(int a, int b = 1) {
	std::cout << "a = " << a << std::endl;
	std::cout << "b = " << b << std::endl;
}

// Đệ Quy
void s(int n) {
	if (n == 1) {
		return 1;
	}
	return n + s(n - 1);
}

int main() {

	function_a(4, 3);									// a = 4; b = 3
	function_a(4);										// a = 4, b = 1

	return 0;

}

float avg(int arr[], int n) {
	int sum = 0;
	for (int i = 0; i < n; i++) {
		sum += arr[i];
	}
	return (float)sum / n;
}
