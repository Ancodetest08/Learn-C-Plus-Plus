#include <iostream>
#include <string>

using namespaces std;

struct Date {
	int date;
	int month;
	int year;

	Date() {
	}
	Date(int _date, int _month, int _year) {
		date = _date;
		month = _month;
		year = _year;
	}
}

struct Student {
	// Properties
	string name;
	int age;
	Date dob;

	// Constructor
	Student() {
		cout << "Hàm khởi tạo chạy." <<endl;
	}
	Student(string _name, int _age, Date _dob) {
		name = _name;
		age = _age;
		dob = _dob;
	}

	// Methods
	void run() {
		cout << "Running..." <<endl;	
	}

	friend istream& operator>>(istream &is, Student &p) {
		cout << "Name: ";
		is >> p.name;
		cout << "Age: ";
		is >> p.age;

		return is;
	}
	friend ostream& operator<<(ostream &os, Student p) {
		os << p.name << " " << p.age <<endl;

		return os;
	}
	friend Student operator+(Student p1, Student p2) {
		Student p3;
		p3.age = p1.age + p2.age;

		return p3;
	}

}

int main() {

	Student students[10] = {
		Student("Long", 18, Date(1, 1, 2000)),
		Student("Duy", 20, Date(2, 3, 2001))
	};
	Student student_1;
	Student student_2{"An", 18, Date(2, 6, 2003)};
	Student student_3 = Student{"An", 18, Date(2, 6, 2003)};
	Student student_4 = student_1 + student_2;
	Student *student_ptr = &student_3;

	cout << "Nhập tên: ";
	getline(cin, student_1.name);
	cout << "Nhập tuổi: ";
	cin >> student_1.age;

	student_1.run();
	cout << "Tên: " << student_1.name <<endl;
	cout << "Tuổi: " << student_1.age <<endl;
	
	cout << student_ptr->name <<endl;
	cout << (*student_ptr).age <<endl;

	cin >> student_1;
	cout << student_1;

	return 0;

}
