#include <iostream>
#include <math.h>

#define DIEM_CHUAN 27.25
    
int main() {
        
	int a = 1;
	float b = 1.5;
	double c = 3.45;
	char d = ‘a’;
	bool e = true;
	bool f = 1;
        
	const double PI = 3.14;

	std::cout << "Hello World!" << std::endl;
	std::cout << "Hello World!\n";
	
	std::cout << "Nhập a = "; std::cin >> a;
	std::cout << "Giá trị a = " << a;
	
	std::cout << "a / 2 = " << (float)a / 2;
	
	std::cout << "Trị tuyệt đối của a = " << abs(a);
	std::cout << "Căn bậc hai của a = " << sqrt(a);
	std::cout << "Luỹ thừa của a và b = " << pow(a, b);

	std::cout << "Min int: " << INT_MIN;
	std::cout << "Max int: " << INT_MAX;
	std::cout << "Min short: " << SHRT_MIN;
	std::cout << "Max short: " << SHRT_MAX;
	std::cout << "Min long: " << LONG_MIN;
	std::cout << "Max long: " << LONG_MAX;

	std::cout << "Int: " << sizeof(int);
	std::cout << "Float: " << sizeof(float);
	std::cout << "Double: " << sizeof(double);
	std::cout << "Char: " << sizeof(char);
	std::cout << "Bool: " << sizeof(bool);
    
	return 0;

}
